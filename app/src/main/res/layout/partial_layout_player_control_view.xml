<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/black">

    <ImageView
        android:id="@+id/imageview_player_loop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="@dimen/spacing.small"
        android:src="@drawable/ic_loop"
        app:layout_constraintEnd_toStartOf="@id/imageview_player_previous"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_player_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="@dimen/spacing.small"
        android:src="@drawable/ic_previous"
        app:layout_constraintEnd_toStartOf="@id/imageview_player_play_pause"
        app:layout_constraintStart_toEndOf="@id/imageview_player_loop"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_player_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_player_imageview_play"
        android:contentDescription="@null"
        android:padding="@dimen/spacing.small"
        android:src="@drawable/ic_play"
        app:layout_constraintEnd_toStartOf="@id/imageview_player_next"
        app:layout_constraintStart_toEndOf="@id/imageview_player_previous"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_player_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="@dimen/spacing.small"
        android:src="@drawable/ic_next"
        app:layout_constraintEnd_toStartOf="@id/imageview_player_shuffle"
        app:layout_constraintStart_toEndOf="@id/imageview_player_play_pause"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_player_shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:padding="@dimen/spacing.small"
        android:src="@drawable/ic_shuffle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageview_player_next"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>