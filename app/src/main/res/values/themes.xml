<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vivaldi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_statusbar_primary</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ToolbarStylePrimary</item>
        <item name="colorControlNormal">@color/color_white_primary</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="Theme.Player.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewTrackTextAppearanceTitleStylePrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_white_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewTrackTextAppearanceStylePrimary" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_white_alpha_50_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolbarStylePrimary" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/color_white_primary</item>
        <item name="colorControlNormal">@color/color_white_primary</item>
    </style>

</resources>